@page
@model HpTcgCardBrowser.Web.AddModel
@{
}

    <form>
        <div class="form-group">
            <label for="exampleFormControlInput1">Card Name</label>
            <input id="cardName" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Card Text (html)</label>
            <textarea id="htmlCardText" class="form-control" rows="5"></textarea>
        </div>
        <div class="form-group">
            <label>Card Text (raw)</label>
            <textarea id="cardText" class="form-control" rows="5"></textarea>
        </div>
        <div class="form-group">
            <label>Card Image URL</label>
            <input id="cardImageUrl" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Flavor Text</label>
            <input id="flavorText" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Lesson Cost</label>
            <input id="lessonCost" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Action Cost</label>
            <input id="actionCost" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Illustrator</label>
            <input id="illustrator" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Copyright</label>
            <input id="copyright" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Card Number</label>
            <input id="cardNumber" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label>Set</label>
            <select id="cardSets" class="form-control">
            </select>
        </div>
        <div class="form-group">
            <label>Card Type</label>
            <select id="cardTypes" class="form-control">
            </select>
        </div>
        <div class="form-group">
            <label>Card Rarity</label>
            <select id="cardRarities" class="form-control">
            </select>
        </div>
        <div class="form-group">
            <label>Lesson Type</label>
            <select id="lessonTypes" class="form-control">
            </select>
        </div>
    </form>